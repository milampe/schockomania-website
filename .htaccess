RewriteEngine On

# Canonicalize /index.html directly to root
RewriteCond %{THE_REQUEST} \s/+index\.html[\s?] [NC]
RewriteRule ^index\.html$ https://schockomania.de/ [R=301,L]

# Force HTTPS and non-www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\.schockomania\.de$ [NC]
RewriteRule ^(.*)$ https://schockomania.de/$1 [R=301,L]
